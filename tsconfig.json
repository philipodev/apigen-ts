{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "module": "esnext",
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"]
}
